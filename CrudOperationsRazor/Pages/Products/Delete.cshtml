@page "{id:int}"
@model CrudOperationsRazor.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Product Details";
}

<h1>Delete Product</h1>

<h4>Are you sure you want to delete this product?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Product.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Product.Price</dd>

        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.Product.StockQuantity</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Product.Category</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger"> <i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-page="./Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i>Cancel</a>
    </form>
</div>
